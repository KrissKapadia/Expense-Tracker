{
  "name": "expense-tracker-pro",
  "version": "1.0.0",
  "description": "A modern, minimal expense tracking web application with advanced features for managing personal finances",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "dev": "live-server --port=3000 --open=/index.html --watch=css,js",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/styles.min.css css/styles.css",
    "minify:js": "terser js/app.js js/storage.js js/charts.js js/export.js -o dist/bundle.min.js -c -m",
    "test": "jest",
    "lint:js": "eslint js/**/*.js",
    "lint:css": "stylelint css/**/*.css",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "serve": "http-server -p 8080 -o"
  },
  "keywords": [
    "expense-tracker",
    "finance",
    "budget",
    "money-management",
    "personal-finance",
    "expense-manager",
    "chart",
    "visualization",
    "vanilla-js",
    "pwa"
  ],
  "author": "Kriss Kapadia <kapadiakriss05@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/expense-tracker-pro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/expense-tracker-pro/issues"
  },
  "homepage": "https://github.com/yourusername/expense-tracker-pro#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.21.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
